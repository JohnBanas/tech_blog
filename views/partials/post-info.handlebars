<article class="post">
  <div class="title">
    <a href="/post/{{id}}"><h3>{{title}}</h3></a>
    <p>{{ post_content }}</p>
    <p>{{user.username}} {{format_date created_at}}</p>
  </div>
  <div class="meta">
    <p>{{comments.length}} {{ format_plural "comment" comments.length}}</p>
  </div>
</article>